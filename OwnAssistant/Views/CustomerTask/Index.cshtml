@using OwnAssistantCommon.Models
@model List<CustomerTaskModel>;
@{
}

<div class="row">
    <div class="col text-center">
        <h2>Tasks</h2>
    </div>
</div>
<!--Move to html helper with paging-->
<div class="row">
    <nav class="navbar navbar-expand bg-body-tertiary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mb-2">
                    <li class="px-2">
                        <a class="btn btn-secondary" asp-controller="CustomerTask" asp-action="Index" asp-route-isCreated="true">Created tasks</a>
                    </li>
                    <li class="px-2">
                        <a class="btn btn-secondary" asp-controller="CustomerTask" asp-action="Index" asp-route-isCreated="false">Task for performe</a>
                    </li>
                </ul>
                
            </div>

            <div class="d-flex mb-2">
                <a class="btn btn-primary" asp-controller="CustomerTask" asp-action="CreateTask">Create Task</a>
            </div>
        </div>
    </nav>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>CrtDate</th>
                </tr>
            </thead>
            <tbody>
                @for(int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Title</td>
                        <td>@Model[i].Text</td>
                        <td>@Model[i].CrtDate.ToString("dd.MM.yyyy hh:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>