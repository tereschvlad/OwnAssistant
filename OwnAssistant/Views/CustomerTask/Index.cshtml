@using OwnAssistantCommon.Models
@model List<CustomerTaskModel>;
@{
}

<div class="row">
    <div class="col text-center">
        <h2>Tasks</h2>
    </div>
</div>
<!--Move to html helper with paging-->
<div class="row">
    <div class="col pb-3">
        <a class="btn btn-primary w-25" asp-controller="CustomerTask" asp-action="CreateTask">Create Task</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>CrtDate</th>
                </tr>
            </thead>
            <tbody>
                @for(int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Title</td>
                        <td>@Model[i].Text</td>
                        <td>@Model[i].CrtDate.ToString("dd.MM.yyyy hh:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>